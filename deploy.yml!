name: Deploy Dashboard to GitHub Pages

on:
  push:
    branches:
      - main
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        
      - name: Replace API_BASE with secret
        run: |
          # Replace __API_BASE_URL__ placeholder with actual secret value
          sed -i "s|__API_BASE_URL__|${{ secrets.API_BASE }}|g" bot/github_upload/dashboard.js
          echo "âœ… API_BASE replaced with secret value"
          
      - name: Setup Pages
        uses: actions/configure-pages@v4
        
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './bot/github_upload'
          
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v4
